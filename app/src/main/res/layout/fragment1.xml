<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

               <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v4.widget.NestedScrollView>
        <android.support.v7.widget.Toolbar
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/square_border"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text"
                    android:typeface="sans"
                    android:textSize="12dp"
                    android:padding="12dp"
                    android:textColor="@color/whiter"
                    android:text="@string/home"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:id="@+id/imageprofile"
                    android:src="@drawable/flag_in"
                    android:layout_gravity="center"
                    app:civ_border_color="@color/colorAccent"
                    android:layout_marginRight="10dp"
                    android:layout_height="40dp" />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <RelativeLayout

android:background="@color/black"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="fill_parent"
                    android:layout_height="220dp"
                    android:layout_alignParentTop="true" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:background="@color/whiter"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>

        <TextView
            android:textSize="12dp"
            android:typeface="serif"
            android:textColor="@color/colorAccent"
            android:text=" PROFILE "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:background="@color/whiter"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>

    </LinearLayout>
    <LinearLayout
        android:textAlignment="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:textAlignment="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:padding="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="NAME :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textAllCaps="true"
                    android:typeface="serif"
                    android:textColor="@color/whiter"
                    android:text="Ditya Bhande"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:padding="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="NICK NAME :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textAllCaps="true"
                    android:typeface="serif"
                    android:textColor="@color/whiter"
                    android:text="Khajoor "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:padding="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="PROFESSION"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textAllCaps="true"
                    android:typeface="serif"
                    android:textColor="@color/whiter"
                    android:text="Dancer:  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:padding="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="DATE OF BIRTH :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/whiter"
                    android:text="15_NOVEMBER_2006"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:padding="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="HOME TOWN :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:typeface="serif"
                    android:textColor="@color/whiter"
                    android:text="Mumbai, Maharashtra, India."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout> <LinearLayout
                android:padding="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="CURRENT CITY :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textAllCaps="true"
                    android:typeface="serif"
                    android:textColor="@color/whiter"
                    android:text="Nala Sopara, Palghar district, Maharashtra, India."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:padding="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text=" FAVARATE HERO:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:typeface="serif"
                    android:textColor="@color/whiter"
                    android:text="SALMAN KHAN :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="SCHOOL :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textAllCaps="true"
                    android:typeface="serif"
                    android:textColor="@color/whiter"
                    android:text="Saint Francis D’Assisi High School, Mumbai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="FAVARATE MOVIE :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/whiter"
                    android:text="SALMAN KHAN ANY MOVIE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:id="@+id/profileld"
                android:textAlignment="center"
                android:textColor="@color/whiter"
                android:text="BHAHUBALI :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:background="@color/whiter"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>

            <TextView
                android:textSize="12dp"
                android:typeface="serif"
                android:textColor="@color/colorAccent"
                android:text=" FAMILY "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:background="@color/whiter"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>

        </LinearLayout>

<LinearLayout
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:weightSum="2"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <android.support.v7.widget.RecyclerView
           android:id="@+id/family_recycler"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

       </android.support.v7.widget.RecyclerView>
        <ProgressBar
            android:id="@+id/pp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textAlignment="center"
            android:typeface="serif"
            android:textColor="@color/whiter"
            android:id="@+id/familydetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:background="@color/whiter"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>

            <TextView
                android:textSize="12dp"
                android:typeface="serif"
                android:textColor="@color/colorAccent"
                android:text=" AWARDS "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:background="@color/whiter"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>

        </LinearLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/listVieawards"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</android.support.v7.widget.RecyclerView>
        <ProgressBar
            android:id="@+id/pp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:background="@color/whiter"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>

            <TextView
                android:textSize="12dp"
                android:typeface="serif"
                android:textColor="@color/colorAccent"
                android:text=" Actor "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_gravity="center"
                android:layout_weight="2.5"
                android:background="@color/whiter"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/listviewactor"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <ProgressBar
            android:id="@+id/pp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/more"
            android:typeface="serif"
            android:textColor="@color/whiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="90dp"/>

    </LinearLayout>



</android.support.v4.widget.NestedScrollView>